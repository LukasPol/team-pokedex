<%= title t("team #{@team.name}", scope: "activerecord.models") %>

<%= link_to_back(teams_path) %>
<%= link_to_edit_resource(edit_team_path(@team), t(:edit_model, model: t(:team, scope: 'activerecord.models'))) %>

<div class="row">
<p class="col-sm-6">
  <small><%= t(:name, scope: 'activerecord.attributes.team') %>: </small>
<strong><%= @team.name %></strong>
</p>

<p class="col-sm-6">
  <small><%= t(:trainer, scope: 'activerecord.attributes.team') %></small>
  <strong><%= @team.trainer.name %></strong>
</p>
</div>

<h4><%= t(:pokemon, scope: 'activerecord.attributes.team').pluralize %></h4>
<div class="row">
  <% @team.pokemons.each do |pokemon| %>
    <div class="card col-6 col-sm-4">
      <%= image_tag(pokemon.sprite_url, class: 'card-img-top') %>
      <%# <img class="card-img-top" src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/1.png" alt="Card image cap"> %>
      <div class="card-body">
        <h5 class="card-title"><%= pokemon.name %></h5>
        <p class="card-text"><%= pokemon.type_pokemon %></p>
      </div>
    </div>
  <% end %>
</div>
