<!DOCTYPE html>
<html>
  <head>
    <title>TeamPokedex</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

		<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" />

    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'script', 'data-turbolinks-track': 'reload' %>
  </head>

  <body data-flash-messages="<%= JSON.dump(flash.to_a) %>">
    <%= render 'shared/navbar' %>
    <div class="container mb-3">
      <div class="container-fluid pt-3 px-4">
      <div class="d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap py-2">
        <div class="d-flex align-items-center flex-wrap">
          <div class="d-flex align-items-baseline flex-wrap mr-5">
            <h2 class="subheader-title text-dark font-weight-bold my-1 mr-3"><%= yield :title %></h2>
          </div>
        </div>
        <div class="d-flex align-items-center pr-0">
          <%= yield :right %>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <%= yield %>
        </div>
      </div>
    </div>
    <%= yield :scripts %>
  </body>
</html>
